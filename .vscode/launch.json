  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Main",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["makelaarsland"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Git History",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/git-history",
      "console": "integratedTerminal",
      "args": [
        "file",
        "makelaarsland.db",
        "data/output/makelaarsland.json",
        "--branch",
        "master"
      ],
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    }
  ]
}
